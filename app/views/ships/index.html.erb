<p id="notice"><%= notice %></p>

<h1>Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ship class</th>
      <th>Description</th>
      <th>Photo url</th>
      <th>Passenger capacity</th>
      <th>Base fare</th>
      <th>Shield rating</th>
      <th>Armor rating</th>
      <th>Cargo capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.name %></td>
        <td><%= ship.ship_class %></td>
        <td><%= ship.description %></td>
        <td><%= ship.photo_url %></td>
        <td><%= ship.passenger_capacity %></td>
        <td><%= ship.base_fare %></td>
        <td><%= ship.shield_rating %></td>
        <td><%= ship.armor_rating %></td>
        <td><%= ship.cargo_capacity %></td>
        <td><%= link_to 'Show', ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

