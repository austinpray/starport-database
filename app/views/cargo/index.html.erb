<p id="notice"><%= notice %></p>

<h1>Cargo</h1>

<table>
  <thead>
    <tr>
      <th>Safefy rating</th>
      <th>Description</th>
      <th>Person</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cargo.each do |cargo| %>
      <tr>
        <td><%= cargo.safefy_rating %></td>
        <td><%= cargo.description %></td>
        <td><%= cargo.person %></td>
        <td><%= cargo.weight %></td>
        <td><%= link_to 'Show', cargo %></td>
        <td><%= link_to 'Edit', edit_cargo_path(cargo) %></td>
        <td><%= link_to 'Destroy', cargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cargo', new_cargo_path %>
